                <div class="subscribe__content">
                    <strong class="subscribe__label">FLORES:</strong>
                    <input type="text" name="flores" class="subscribe__input" required>
                </div>

                <button class="subscribe__button button">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</section>