<!--==================== HOME ====================-->
<section class="home" id="/">
    <img src="/img/planta.jpg" alt="" class="home__img">

    <div class="home__container container grid">
        <div class="home__data">

            <h1 class="home__data-title">Conociendo<br>mas <b>sobre<br>Plantas</b></h1>

        </div>

        <div class="home__social">
            <a href="https://www.facebook.com/" target="_blank" class="home__social-link">
                <i class="ri-facebook-box-fill"></i>
            </a>
            <a href="https://www.instagram.com/" target="_blank" class="home__social-link">
                <i class="ri-instagram-fill"></i>
            </a>
            <a href="https://twitter.com/" target="_blank" class="home__social-link">
                <i class="ri-twitter-fill"></i>
            </a>
        </div>

        <div class="home__info">
            <div>
                <span class="home__info-title">Elaborado por el equipo MicroInov</span>
            </div>

            <div class="home__info-overlay">
                <img src="/img/logo1.jpg" alt="" class="home__info-img">
            </div>
        </div>
    </div>
</section>

<!--==================== ABOUT ====================-->
<section class="about section">
    <div class="about__container container grid">
        <div class="about__data">
            <h2 class="section__title about__title">¿Cuál es el fin de <br> esta Página Web?</h2>
            <p class="about__description">La creación de esta página tiene como finalidad facilitarle a los biólogos la
                búsqueda de sus descubrimientos para resolver problemas o desarrollar nuevos productos y procesos.
            </p>
        </div>

        <div class="about__img">
            <div class="about__img-overlay">
                <img src="/img/about1.jpg" alt="" class="about__img-one">
            </div>

            <div class="about__img-overlay">
                <img src="/img/about2.jpg" alt="" class="about__img-two">
            </div>
        </div>
    </div>
</section>

<!--==================== DISCOVER ====================-->
<section class="discover section" id="discover">
    <h2 class="section__title">Galeria de las <br>plantas principales </h2>

    <div class="discover__container container swiper-container">

        <div class="swiper-wrapper">
            
            {{#each madronos}}

            <div class="discover__card swiper-slide">
                <img src="/img/1{{especie}}.jpg" alt="" class="discover__img dimg">
                <div class="discover__data">
                                <span class="discover__description">{{especie}}</span>
                </div>
            </div>

            {{/each}}

        </div>
    </div>
</section>

<!--==================== CONTACT ME ====================-->
<section class="contact section" id="contact">
    <h2 class="section__title">Contactanos</h2>
    <span class="section__subtitle">Ponerse en contacto</span>

    <div class="contact__container container grid">
        <div>
            <div class="contact__information">
                <i class="uil uil-phone contact__icon"></i>

                <div>
                    <h3 class="contact__title">Llamanos</h3>
                    <span class="contact__subtitle">+52 4651002344</span>
                </div>
            </div>

            <div class="contact__information">
                <i class="uil uil-envelope contact__icon"></i>

                <div>
                    <h3 class="contact__title">Email</h3>
                    <span class="contact__subtitle">madronos_2021@email.com</span>
                </div>
            </div>

            <div class="contact__information">
                <i class="uil uil-map-marker contact__icon"></i>

                <div>
                    <h3 class="contact__title">Locacion</h3>
                    <span class="contact__subtitle">Mexico - Ags. R.R</span>
                </div>
            </div>
        </div>

        <form action="" class="contact__form grid">
            <div class="contact__inputs grid">
                <div class="contact__content">
                    <label for="" class="contact__label">Nombre</label>
                    <input type="text" class="contact__input">
                </div>
                <div class="contact__content">
                    <label for="" class="contact__label">Email</label>
                    <input type="email" class="contact__input">
                </div>
            </div>
            <div class="contact__content">
                <label for="" class="contact__label">Projecto</label>
                <input type="text" class="contact__input">
            </div>
            <div class="contact__content">
                <label for="" class="contact__label">Mensage</label>
                <textarea name="" id="" cols="0" rows="7" class="contact__input"></textarea>
            </div>

            <div>
                <a href="" class="button button--flex">
                    Enviar Mensage
                    <i class="uil uil-message button__icon"></i>
                </a>
            </div>
        </form>
    </div>
</section>