{{#if error}}
<section class="login__modal">
    <div class="login__bg">
        <div class="login__modal-content">
            <i class="uil uil-times login__modal-close"></i>

            <div class="login__container container">
                <h4 class="section__title">ESTADO</h4>
                <ul class="services__modal-services grid">
                    <li class="services__modal-service">
                        <i class="uil uil-confused services__modal-icon"></i>
                        <p class="login__description">
                            {{error}}
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{{/if}}

{{#each errors}}
<section class="login__modal">
    <div class="login__bg">
        <div class="login__modal-content">
            <i class="uil uil-times login__modal-close"></i>

            <div class="login__container container">
                <h2 class="section__title">ESTADO</h2>
                <p class="login__description">
                    {{text}}
                </p>
            </div>
        </div>
    </div>
</section>
{{/each}}